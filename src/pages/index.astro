---
import Layout from '../layouts/Layout.astro';
import image from '../../public/profile.jpg'
import cv from '/cv.pdf'
import ProjectsList from '../components/ProjectsList.astro'
import { Image } from 'astro:assets';
---

<Layout title="Portafolio Anberto">
	<main class='main'>
		<section class='min-h-[90vh] flex flex-col gap-4 justify-center'>
			<div class='h-full flex flex-col '>

				<div class=''>
					<div class='flex flex-col items-center gap-4'>
						<figure class='h-40 w-40 sm:h-52 sm:w-52 rounded-full overflow-hidden'>
							<Image src={image} alt="Un cohete en el espacio." class={'h-full w-full object-cover'}/>
						</figure>
						<div class='text-verdeClaro text-sm text-opacity-80 flex gap-4'>
							<a target='_blank' href='https://github.com/anber-02' class='bg-morado bg-opacity-50 rounded-sm px-2 py-0.5 text-sm flex gap-1 items-center hover:scale-110 hover:bg-opacity-1 ease-in duration-150 ' rel='noreferrer'>
								<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24'><path fill='currentColor' d='M12.001 2c-5.525 0-10 4.475-10 10a9.994 9.994 0 0 0 6.837 9.488c.5.087.688-.213.688-.476c0-.237-.013-1.024-.013-1.862c-2.512.463-3.162-.612-3.362-1.175c-.113-.288-.6-1.175-1.025-1.413c-.35-.187-.85-.65-.013-.662c.788-.013 1.35.725 1.538 1.025c.9 1.512 2.337 1.087 2.912.825c.088-.65.35-1.087.638-1.337c-2.225-.25-4.55-1.113-4.55-4.938c0-1.088.387-1.987 1.025-2.688c-.1-.25-.45-1.275.1-2.65c0 0 .837-.262 2.75 1.026a9.28 9.28 0 0 1 2.5-.338c.85 0 1.7.112 2.5.337c1.913-1.3 2.75-1.024 2.75-1.024c.55 1.375.2 2.4.1 2.65c.637.7 1.025 1.587 1.025 2.687c0 3.838-2.337 4.688-4.563 4.938c.363.312.676.912.676 1.85c0 1.337-.013 2.412-.013 2.75c0 .262.188.574.688.474A10.016 10.016 0 0 0 22 12c0-5.525-4.475-10-10-10Z' /></svg>
								<small>GitHub</small>

							</a>
							<a target='_blank' href='https://www.linkedin.com/in/luisanberto/' class='bg-morado bg-opacity-50 rounded-sm px-2 py-0.5 text-sm flex gap-1 items-center hover:scale-110 hover:bg-opacity-1 ease-in duration-150' rel='noreferrer'>
								<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24'><path fill='currentColor' d='M20.47 2H3.53a1.45 1.45 0 0 0-1.47 1.43v17.14A1.45 1.45 0 0 0 3.53 22h16.94a1.45 1.45 0 0 0 1.47-1.43V3.43A1.45 1.45 0 0 0 20.47 2ZM8.09 18.74h-3v-9h3ZM6.59 8.48a1.56 1.56 0 1 1 0-3.12a1.57 1.57 0 1 1 0 3.12Zm12.32 10.26h-3v-4.83c0-1.21-.43-2-1.52-2A1.65 1.65 0 0 0 12.85 13a2 2 0 0 0-.1.73v5h-3v-9h3V11a3 3 0 0 1 2.71-1.5c2 0 3.45 1.29 3.45 4.06Z' /></svg>
								<small>Linkedin</small>
							</a>
						</div>
					</div>

					<div class='mb-4 mt-8'>
						{/* 2.4rem */}
						<h1 class='text-3xl sm:text-5xl font-bold text-primary'>Hola, soy Luis</h1>
						<h3 class='font-semibold text-gray-400 sm:text-2xl'>Fullstack developer</h3>
						<p class='font-normal text-gray-200 mt-2 break-words sm:mt-4'>Entusiasta de la tecnología y el desarrollo de software.</p>
					</div>
				</div>

			</div>
			<a class='bg-secondary bg-opacity-80 py-2 px-4 rounded-lg font-semibold self-start tracking-wide hover:bg-opacity-60 hover:text-white' download='' href={cv}>Descargar CV</a>
		</section>

		<div class='bg-gray-500 h-[1px] rounded-sm w-full my-2' id='about_me' />

		<section class='my-4 pb-2   sm:min-h-0 sm:py-8'>
			<h2 class='text-2xl font-bold text-secondary sm:text-3xl'>Sobre Mi</h2>
			<div class='container'>
				<p class='font-normal text-gray-200 text-sm'>Estudiante en TI, desarrollando proyectos personales, practicando y mejorando mis conocimientos en el mundo del desarrollo.</p>
			</div>

			<div class=''>
				<div class='mt-4'>
					<h3 class='text-morado font-semibold text-xl'>Experiencia</h3>
					<ul class='text-white pl-6'>
						<li class='list-disc'>
							<p class='text-white text-sm font-semibold'>Empresa <small class='block text-gray-300 text-xs'>(2021-2024)</small></p>
							<div class='pl-2 description'>
								<span class='text-gray-300 text-xs'>Aquí va la descripción</span>
							</div>
						</li>
					</ul>
				</div>
				<div class='mt-4'>
					<h3 class='text-morado font-semibold text-xl'>Educación</h3>
					<ul class='text-white pl-6'>
						<li class='list-disc'>
							<p class='text-white text-sm font-semibold'>Tecnologías de la información</p>
							<div class='pl-2'>
								<span class='text-gray-300 text-xs'>Universidad Tecnológica de los valles centrales de Oaxaca ( UTVCO )</span>
								<small class='block text-gray-300 text-xs'>2021-2024</small>
							</div>
						</li>
					</ul>
				</div>
				<div class='mt-4'>
					<h3 class='text-morado font-semibold text-xl'>Lenguajes</h3>
					<ul class='text-white pl-6'>
						<li class='list-disc'>
							<p class='text-white text-sm font-semibold'>Español</p>
							<p class='text-white text-sm font-semibold'>Ingles - A1</p>
						</li>
					</ul>
				</div>
			</div>

		</section>

		<div class='bg-gray-500 h-[1px] rounded-sm w-full my-2' id='portfolio' />
		<section class='mt-4 sm:py-8'>
			<h2 class='text-2xl sm:text-3xl font-bold text-gray-200'>Proyectos</h2>
			<span class='block font-semibold text-gray-400 pb-2 '>Trabajos recientes</span>
			<div class=''>
				<ProjectsList/>
			</div>
		</section>

		<div class='bg-gray-500 h-[1px] rounded-sm w-full mt-4' />
		<section class='mb-8'>
			<div class='mt-4'>
				<h3 class='text-verde text-2xl sm:text-3xl font-bold '>Tecnologias utilizadas</h3>
				<div class='my-2'>
					<ul class='text-white flex gap-2 flex-wrap font-poppins text-xs sm:text-base'>
						<li>
							JavaScript
						</li>
						<li>
							React
						</li>
						<li>
							HTML
						</li>
						<li>
							CSS
						</li>
						<li>
							MySQL
						</li>
						<li>
							NodeJs
						</li>
						<li>
							Angular
						</li>
						<li>
							React Native
						</li>
						<li>
							Laravel
						</li>

					</ul>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>

.main{
  margin: 0 20px 20px 20px;
  margin-top: 48px;
  padding: 0 8px;
}

</style>
