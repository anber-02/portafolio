---
import type { Project } from '../types/types';
interface Props {
	project: Project
}

const { project } = Astro.props;
---

<div class='bg-slate-800 text-white rounded-md py-4 px-4 overflow-auto h-full'>
	<figure class='overflow-hidden h-auto w-full '>
		<img src={project.image} alt={`image de ${project.nombre[0].text.content}`} class='block h-full w-full object-cover' />
	</figure>

	<div class='flex gap-2 flex-wrap my-4'>
		{project.lenguajes.map(lenguaje => {
			return (
				<span class='py-0.5 px-2 rounded-full text-xs  tracking-wider opacity-90' style={{ backgroundColor: lenguaje.color }}>
					{lenguaje.name}
				</span>
			)
		})}
	</div>

	<div class='pb-4 mt-2'>
		<h2 class='font-semibold text-lg'>{project.nombre[0].text.content}</h2>
		<div class='bg-gray-200 h-[1px] rounded-sm w-full mb-2' />
		<p class='text-sm'>
			{project?.descripcion[0]?.text.content}
		</p>
	</div>
	{project.github !== null
		? (
			<a href={project.github || ''} target='_blank' rel='noreferrer' class='flex gap-2 items-center bg-gray-600 rounded-md py-1 px-2 hover:bg-gray-700'>
				<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24'><path fill='currentColor' d='M12.001 2c-5.525 0-10 4.475-10 10a9.994 9.994 0 0 0 6.837 9.488c.5.087.688-.213.688-.476c0-.237-.013-1.024-.013-1.862c-2.512.463-3.162-.612-3.362-1.175c-.113-.288-.6-1.175-1.025-1.413c-.35-.187-.85-.65-.013-.662c.788-.013 1.35.725 1.538 1.025c.9 1.512 2.337 1.087 2.912.825c.088-.65.35-1.087.638-1.337c-2.225-.25-4.55-1.113-4.55-4.938c0-1.088.387-1.987 1.025-2.688c-.1-.25-.45-1.275.1-2.65c0 0 .837-.262 2.75 1.026a9.28 9.28 0 0 1 2.5-.338c.85 0 1.7.112 2.5.337c1.913-1.3 2.75-1.024 2.75-1.024c.55 1.375.2 2.4.1 2.65c.637.7 1.025 1.587 1.025 2.687c0 3.838-2.337 4.688-4.563 4.938c.363.312.676.912.676 1.85c0 1.337-.013 2.412-.013 2.75c0 .262.188.574.688.474A10.016 10.016 0 0 0 22 12c0-5.525-4.475-10-10-10Z' /></svg>
				<span>Repositorio</span>
			</a>
			)
		: ''}

</div>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
