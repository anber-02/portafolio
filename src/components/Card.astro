---
import type { Project } from "../types/types";
interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="flex p-2 gap-2 flex-col bg-slate-800 text-white rounded-md overflow-hidden relative h-auto group">
  <figure class="overflow-hidden aspect-square w-full h-auto flex-none rounded-sm">
    <img
      src={project.image}
      loading="lazy"
      alt={`image de ${project.nombre[0].text.content}`}
      class="block h-full w-full object-cover group-hover:scale-105"
    />
  </figure>

  <div class="flex flex-auto flex-col px-2">
    <h4 class="text-white text-sm first-letter:uppercase">
      {project.nombre[0].text.content}
    </h4>
    <div class="flex gap-1 flex-wrap py-1 text-xs text-gray-200">
      {
        project.lenguajes.map((lenguaje) => {
          return (
            <span
              class="py-0.5 px-2 text-xs rounded-full"
              style={{ backgroundColor: lenguaje.color }}
            >
              {lenguaje.name}
            </span>
          );
        })
      }
    </div>
  </div>

  <div class="transition-all duration-300 ease-in-out absolute top-0 left-0 w-full h-full hidden group-hover:block bg-black bg-opacity-70">
    <div class="flex flex-col gap-2 p-2 items-center justify-center h-full w-full">
      <h3 class="text-white text-sm first-letter:uppercase">
        {project.descripcion[0].text.content}
      </h3>

      {
        project.github !== null ? (
          <a
            href={project.github || ""}
            target="_blank"
            rel="noreferrer"
            class="flex gap-2 items-center bg-gray-600 rounded-md p-1 px-2 hover:bg-gray-700"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
            >
              <path
                fill="currentColor"
                d="M12.001 2c-5.525 0-10 4.475-10 10a9.994 9.994 0 0 0 6.837 9.488c.5.087.688-.213.688-.476c0-.237-.013-1.024-.013-1.862c-2.512.463-3.162-.612-3.362-1.175c-.113-.288-.6-1.175-1.025-1.413c-.35-.187-.85-.65-.013-.662c.788-.013 1.35.725 1.538 1.025c.9 1.512 2.337 1.087 2.912.825c.088-.65.35-1.087.638-1.337c-2.225-.25-4.55-1.113-4.55-4.938c0-1.088.387-1.987 1.025-2.688c-.1-.25-.45-1.275.1-2.65c0 0 .837-.262 2.75 1.026a9.28 9.28 0 0 1 2.5-.338c.85 0 1.7.112 2.5.337c1.913-1.3 2.75-1.024 2.75-1.024c.55 1.375.2 2.4.1 2.65c.637.7 1.025 1.587 1.025 2.687c0 3.838-2.337 4.688-4.563 4.938c.363.312.676.912.676 1.85c0 1.337-.013 2.412-.013 2.75c0 .262.188.574.688.474A10.016 10.016 0 0 0 22 12c0-5.525-4.475-10-10-10Z"
              />
            </svg>
            <span>Repositorio</span>
          </a>
        ) : (
          ""
        )
      }
    </div>
  </div>
</div>
