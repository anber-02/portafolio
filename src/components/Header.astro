---
import image from "../../public/profile.jpg";
import cv from "../../public/cv.pdf";
import { Image } from "astro:assets";
---

<section id="inicio" class="min-h-screen flex flex-col gap-4 justify-center">
  <div class="sm:grid grid-cols-2 items-center">
    <div class="flex flex-col items-center gap-4">
      <figure class="h-40 w-40 md:h-60 md:w-60 rounded-full overflow-hidden">
        <Image
          src={image}
          alt="Un cohete en el espacio."
          class={"h-full w-full object-cover"}
        />
      </figure>

      <div class="text-verdeClaro text-sm text-opacity-80 flex gap-4">
        <a
          target="_blank"
          href="https://github.com/anber-02"
          class="bg-morado bg-opacity-50 rounded-sm px-2 py-0.5 text-sm flex gap-1 items-center hover:scale-110 hover:bg-opacity-1 ease-in duration-150"
          rel="noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><path
              fill="currentColor"
              d="M12.001 2c-5.525 0-10 4.475-10 10a9.994 9.994 0 0 0 6.837 9.488c.5.087.688-.213.688-.476c0-.237-.013-1.024-.013-1.862c-2.512.463-3.162-.612-3.362-1.175c-.113-.288-.6-1.175-1.025-1.413c-.35-.187-.85-.65-.013-.662c.788-.013 1.35.725 1.538 1.025c.9 1.512 2.337 1.087 2.912.825c.088-.65.35-1.087.638-1.337c-2.225-.25-4.55-1.113-4.55-4.938c0-1.088.387-1.987 1.025-2.688c-.1-.25-.45-1.275.1-2.65c0 0 .837-.262 2.75 1.026a9.28 9.28 0 0 1 2.5-.338c.85 0 1.7.112 2.5.337c1.913-1.3 2.75-1.024 2.75-1.024c.55 1.375.2 2.4.1 2.65c.637.7 1.025 1.587 1.025 2.687c0 3.838-2.337 4.688-4.563 4.938c.363.312.676.912.676 1.85c0 1.337-.013 2.412-.013 2.75c0 .262.188.574.688.474A10.016 10.016 0 0 0 22 12c0-5.525-4.475-10-10-10Z"
            ></path></svg
          >
          <small>GitHub</small>
        </a>
        <a
          target="_blank"
          href="https://www.linkedin.com/in/luisanberto/"
          class="bg-morado bg-opacity-50 rounded-sm px-2 py-0.5 text-sm flex gap-1 items-center hover:scale-110 hover:bg-opacity-1 ease-in duration-150"
          rel="noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><path
              fill="currentColor"
              d="M20.47 2H3.53a1.45 1.45 0 0 0-1.47 1.43v17.14A1.45 1.45 0 0 0 3.53 22h16.94a1.45 1.45 0 0 0 1.47-1.43V3.43A1.45 1.45 0 0 0 20.47 2ZM8.09 18.74h-3v-9h3ZM6.59 8.48a1.56 1.56 0 1 1 0-3.12a1.57 1.57 0 1 1 0 3.12Zm12.32 10.26h-3v-4.83c0-1.21-.43-2-1.52-2A1.65 1.65 0 0 0 12.85 13a2 2 0 0 0-.1.73v5h-3v-9h3V11a3 3 0 0 1 2.71-1.5c2 0 3.45 1.29 3.45 4.06Z"
            ></path></svg
          >
          <small>LinkedIn</small>
        </a>
      </div>
    </div>

    <div class="mb-4 mt-8 flex flex-col gap-4">
      <section>
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-primary">
          Hola, soy Luis
        </h1>
        <h3 class="font-semibold text-gray-400 sm:text-2xl">
          Desarrollador de software
        </h3>
        <p class="font-normal text-gray-200 mt-2 break-words sm:mt-4">

        </p>
      </section>
      <a
        class="bg-secondary bg-opacity-80 py-2 px-4 rounded-lg font-semibold self-start tracking-wide hover:bg-opacity-60 hover:text-white"
        download=""
        href={cv}>Descargar CV</a
      >
    </div>
  </div>
</section>
