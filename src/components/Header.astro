---
import image from "../../public/profile.webp";
import { Image } from "astro:assets";
import SideMenu from './Menu.astro'
---

<header class="flex justify-between items-center lg:max-w-4xl md:max-w-2xl mx-auto w-full  py-4">
  <figure class="w-12 h-12 rounded-full overflow-hidden">
    <Image
      src={image}
      alt="avatar-profile"
      class={"h-full w-full object-cover"}
    />
  </figure>

  <SideMenu />
</header>
